/*
 * @lc app=leetcode.cn id=11 lang=cpp
 *
 * [11] 盛最多水的容器
 */

// @lc code=start
class Solution {
public:
    int maxArea(vector<int>& height) {
        int i = 0, j = height.size() - 1;
        int res = 0;

        while (i < j)
        {
            int area = min(height[i], height[j]) * (j - i);
            if (area > res) res = area;

            if (height[i] <= height[j])
            {
                ++i;
            }
            else
            {
                --j;
            }
        }
        return res;
    }
};
// @lc code=end

